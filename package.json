{
  "name": "hero-wars-island-website",
  "version": "2.1.1",
  "private": false,
  "type": "module",
  "description": "The Hero Wars islands.",
  "scripts": {
    "dev": "ts-node --project tsconfig.server.json server.ts",
    "dev-prod": "NODE_ENV=production ts-node --project tsconfig.server.json server.ts",
    "generate": "tsc && vite build --outDir dist/static --ssrManifest .vite/ssr-manifest.json && npm run build:server && npm run generate-only",
    "generate-only": "NODE_ENV=production ts-node --project tsconfig.ssg.json prerender.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "tsc && vite build --outDir dist/client --ssrManifest .vite/ssr-manifest.json",
    "build:server": "tsc && vite build --outDir dist/server --ssr src/entry-server.js",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.vue,.ts",
    "format": "prettier --write src/ tests/ server.ts prerender.ts",
    "test": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@vue/server-renderer": "^3.5.24",
    "bootstrap": "^5.3.8",
    "compression": "^1.8.1",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "pinia": "^3.0.4",
    "sirv": "^3.0.2",
    "vite-plugin-ejs": "^1.7.0",
    "vue": "^3.5.24",
    "vue-component-type-helpers": "^3.0.4",
    "vue-i18n": "^11.0.1",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.2.10",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.5",
    "@types/node": "^24.2.1",
    "@types/node-gzip": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.8",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/test-utils": "^2.4.4",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^10.5.1",
    "jsdom": "^27.1.0",
    "node-gzip": "^1.1.2",
    "prettier": "^3.6.2",
    "sass": "~1.93.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.2.2",
    "vite-plugin-compression2": "^2.2.0",
    "vitest": "^4.0.8",
    "vue-tsc": "^3.1.3"
  }
}
