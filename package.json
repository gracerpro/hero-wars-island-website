{
  "name": "hero-wars-island-website",
  "version": "1.6.7",
  "private": false,
  "type": "module",
  "description": "The Hero Wars islands.",
  "scripts": {
    "dev": "node server",
    "dev-prod": "NODE_ENV=production node server",
    "generate": "tsc && vite build --outDir dist/static --ssrManifest .vite/ssr-manifest.json && npm run build:server && NODE_ENV=production node prerender",
    "generate-only": "NODE_ENV=production node prerender",
    "build": "npm run build:client && npm run build:server",
    "build:client": "tsc && vite build --outDir dist/client --ssrManifest .vite/ssr-manifest.json",
    "build:server": "tsc && vite build --outDir dist/server --ssr src/entry-server.js",
    "preview": "vite preview",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "test": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@vue/server-renderer": "^3.5.12",
    "bootstrap": "^5.3.3",
    "compression": "^1.7.5",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "sirv": "^3.0.0",
    "vite-plugin-ejs": "^1.7.0",
    "vue": "^3.2.13",
    "vue-component-type-helpers": "^3.0.4",
    "vue-i18n": "^11.0.1",
    "vue-router": "^4.0.3",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^24.0.15",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitest/coverage-v8": "^3.0.3",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/test-utils": "^2.4.4",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.30.0",
    "jsdom": "^26.0.0",
    "node-gzip": "^1.1.2",
    "prettier": "^3.2.5",
    "sass": "~1.64.2",
    "typescript": "^5.8.3",
    "vite": "^6.0.2",
    "vite-plugin-compression2": "^1.3.3",
    "vitest": "^3.0.3",
    "vue-tsc": "^3.0.3"
  }
}
